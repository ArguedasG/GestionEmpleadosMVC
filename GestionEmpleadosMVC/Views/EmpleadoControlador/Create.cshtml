@model Empleado
<h2>Insertar Empleado</h2>

<form method="post">
    <label>Nombre:</label>
    <input type="text" name="Nombre" required pattern="[A-Za-z -]+" />

    <label>Salario:</label>
    <input type="number" name="Salario" required min="0" step="0.01" />

    <button type="submit">Insertar</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <p>@ViewBag.Mensaje</p>
}

<a href="/Empleado/Index">Regresar</a>
