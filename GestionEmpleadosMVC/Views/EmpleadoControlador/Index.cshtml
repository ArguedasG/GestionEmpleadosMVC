@model List<Empleado>
<!--
    Esta vista muestra la lista de empleados en una tabla.
    Utiliza el modelo List<Empleado> trabajado en modelo y controlador para obtener los datos de los empleados y mostrarlos en una tabla HTML.
    También incluye un enlace para insertar un nuevo empleado.
-->

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Lista de Empleados</h2>

    <div class="d-flex justify-content-end mb-3">
        <!-- Enlace para redirigir a la vista de creación de un nuevo empleado -->
        <a href="/EmpleadoControlador/Create" class="btn btn-success">Insertar Empleado</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-lg">
            <thead class="table-dark text-center">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Salario</th>
                </tr>
            </thead>
            <tbody>
                <!-- Itera sobre la lista de empleados y muestra cada uno en una fila de la tabla -->
                @foreach (var emp in Model)
                {
                    <tr class="text-center">
                        <td>@emp.id</td>
                        <td>@emp.Nombre</td>
                        <td>@emp.Salario</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Incluye el CSS de Bootstrap para estilos y diseño responsivo -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
